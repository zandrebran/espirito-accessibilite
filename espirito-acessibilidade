MYSELF="espirito-acessibilidade"

#yum -y install lynx links elinks xpdf screen xclip clpbar mutt wget mc newsbeuter sylpheed

if [ $(echo $PATH | grep $MYSELF | wc -l) -eq 0 ]
then
echo """
EA_DIR=$HOME/$MYSELF/
PATH=$PATH:$HOME/$MYSELF/
export PATH""" >> $HOME/.bash_profile
. $HOME/.bash_profile
fi

chmod -R 755 $EA_DIR

# backup dconf - only first time
#====================================================================
ls ${EA_DIR}gsettings_backup &>/dev/null || dconf dump / > ${EA_DIR}gsettings_backup
# recovery backup
# dconf load / < ${EA_DIR}settings_backup

# settings
#====================================================================
bash settings
wait

# KEYBINDS
#====================================================================
bash keybinds --install
wait

# END
#====================================================================

#FIXME arquivo de tradução
spd-say "Programa espirito acessibilidade concluído."

